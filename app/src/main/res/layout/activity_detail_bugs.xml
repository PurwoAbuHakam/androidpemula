<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.DetailBugsActivity">

    <TextView
        android:id="@+id/tv_bugs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Semut Hitam"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_foto_bugs"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"
        tools:src="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_spi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Index Pain : 2.0"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bugs_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini adalah deskripsi tentang serangga yang memiliki gigitan yang mematikan. Ukuran dari memtaikan di sini memiliki satuan Schmidt Pain Index" />
    </ScrollView>

</LinearLayout>